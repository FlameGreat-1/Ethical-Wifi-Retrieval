# Application Settings
APP_NAME=WiFiRetriever
DEBUG=False
ENVIRONMENT=production

# Security
SECRET_KEY=your_very_long_and_secure_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql://user:password@localhost/wifiretriever_db

# API Keys
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Encryption
FERNET_KEY=your_fernet_key_here

# MFA
TOTP_ISSUER=WiFiRetriever

# Geofencing
DEFAULT_GEOFENCE_RADIUS=10  # in kilometers

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Backup
BACKUP_DIRECTORY=/path/to/secure/backup/directory

# Password Rotation
PASSWORD_ROTATION_INTERVAL=30  # in days

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Compliance
GDPR_DPO_EMAIL=dpo@wifiretriever.com

# Third-party Services
CLOUD_STORAGE_PROVIDER=AWS
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-west-2
AWS_BUCKET_NAME=wifiretriever-backups

# Performance
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000

# Feature Flags
ENABLE_QUANTUM_RESISTANT_CRYPTO=true
ENABLE_SECURE_MULTIPARTY_COMPUTATION=true

# Monitoring
SENTRY_DSN=your_sentry_dsn_here

# Caching
REDIS_URL=redis://localhost:6379/0

# Notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Machine Learning Model
ML_MODEL_PATH=/path/to/behavioral_analytics_model.pkl

# Certificate Paths
SSL_KEYFILE_PATH=./key.pem
SSL_CERTFILE_PATH=./cert.pem
